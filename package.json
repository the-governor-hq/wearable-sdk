{
  "name": "@the-governor-hq/wearable-sdk",
  "version": "0.1.0",
  "description": "The Auth0 for Wearables â€” TypeScript-first OAuth SDK for Garmin, Fitbit, and more. Ship wearable auth in 15 minutes.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./stores": {
      "types": "./dist/stores/index.d.ts",
      "import": "./dist/stores/index.js",
      "require": "./dist/stores/index.cjs"
    },
    "./garmin": {
      "types": "./dist/providers/garmin/index.d.ts",
      "import": "./dist/providers/garmin/index.js",
      "require": "./dist/providers/garmin/index.cjs"
    },
    "./fitbit": {
      "types": "./dist/providers/fitbit/index.d.ts",
      "import": "./dist/providers/fitbit/index.js",
      "require": "./dist/providers/fitbit/index.cjs"
    }
  },
  "files": [
    "dist",
    "prisma",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "wearable",
    "garmin",
    "fitbit",
    "oauth",
    "health",
    "fitness",
    "sdk",
    "typescript",
    "auth",
    "smartwatch",
    "hrv",
    "sleep",
    "heart-rate",
    "activity"
  ],
  "author": "The Governor HQ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-governor-hq/wearable-sdk"
  },
  "homepage": "https://github.com/the-governor-hq/wearable-sdk#readme",
  "bugs": {
    "url": "https://github.com/the-governor-hq/wearable-sdk/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    }
  }
}
